<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css" />
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>

    <main>
      <% if (cartItems.length > 0) { %>
        <h1>Total Price: $<%= totalPrice %></h1>
        <ul class="cart__item-list">
          <% for (let cartItem of cartItems) { %>
            <li class="cart__item">
              <h1><%= cartItem.product.title %></h1>
              <h2>Quantity: <%= cartItem.quantity %></h2>
              <h2>Price: $<%= cartItem.product.price %></h2>
              <form action="/cart-delete-item" method="POST">
                  <input type="hidden" name="productId" value="<%= cartItem.product._id %>">
                  <button class="btn danger" type="submit">Delete</button>
              </form>
          </li>
          <% } %>
        </ul>
        <form class="cart_button centered" action="/order" method="POST">
          <button class="btn" type="submit">Order</button>
        </form>
      <% } else { %>
        <h1>No Products in Cart!</h1>
      <% } %>
    </main>

  </body>
  <%- include('../includes/end.ejs') %>
